# Azure Function - Environment Variables Template
# Copy this to .env or set in Azure Function App Configuration

# Azure Subscription and Resource Group
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_RESOURCE_GROUP=your-resource-group-name
AZURE_LOCATION=eastus

# Azure Container Registry (ACR)
ACR_LOGIN_SERVER=yourregistry.azurecr.io
ACR_USERNAME=yourregistry
ACR_PASSWORD=your-acr-password-or-use-managed-identity
TRAINING_IMAGE=yourregistry.azurecr.io/yolo-trainer:latest

# Azure Storage Account
STORAGE_ACCOUNT_NAME=yourstorageaccount
STORAGE_ACCOUNT_KEY=your-storage-account-key

# Azure Files Share Names
DATASET_SHARE_NAME=datasets
MODEL_SHARE_NAME=models
OUTPUT_SHARE_NAME=outputs

# Training Defaults
DEFAULT_EPOCHS=100
DEFAULT_PATIENCE=50
DEFAULT_BATCH=24
DEFAULT_IMGSZ=640

# Function App URL (for status URLs in responses)
FUNCTION_APP_URL=https://your-function-app.azurewebsites.net
